%div{:class => "cont-#{message.user.id}"}
  %div{:class => "message-box msg-#{message.user.id}"}
    .d-flex.align-items-center
      -# = image_tag(message.user.chat_avatar, class:'chat_pfp')
      %div
        - if message.user.id == @current_user.id
          = link_to "You", message.user
        - else
          %h6{:class => "name msg-role-#{message.user.role}"}
            = link_to message.user.name, message.user, class:"msg-role-#{message.user.role}"
        %p.time{:style => "font-size: 10px;"}
          = time_ago_in_words(message.created_at)
          ago
    %div
      = message.body
    = render 'messages/attachments', message: message
